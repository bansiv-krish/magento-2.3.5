<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceContainer name="content" >
    		<block class="Bansi\HelloWorld\Block\HelloWorld" name="hello_world" template="Bansi_HelloWorld::custom.phtml">
    			<arguments>
    				<argument name="show_hello" xsi:type="string">From layput templates</argument>
    				<argument name="show_array" xsi:type="array" >
    					<item name="first" xsi:type="string" >first array</item>
    					<item name="second" xsi:type="string">second array</item>
    					<item name="some_number" xsi:type="number">100</item>
    				</argument>
    				<argument name="view_model" xsi:type="object">Bansi\HelloWorld\ViewModel\HelloView</argument>
    			</arguments>

    		</block>
    	</referenceContainer>

    </body>
</page>
